{
  // Editor Settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [80, 100],
  "editor.wordWrap": "bounded",
  "editor.minimap.enabled": false,

  // File Settings
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/coverage": true
  },

  // TypeScript Settings
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // ESLint Settings
  "eslint.workingDirectories": [
    "apps/frontend",
    "apps/backend",
    "packages/shared"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Prettier Settings
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,

  // Git Settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,

  // Terminal Settings
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.osx": "bash",

  // Explorer Settings
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "docker-compose.yml": "docker-compose.*.yml",
    ".env": ".env.*"
  },

  // Search Settings
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/coverage": true,
    "**/pnpm-lock.yaml": true
  },

  // Emmet Settings
  "emmet.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html"
  },

  // Auto Save
  "files.autoSave": "onFocusChange",

  // Bracket Pair Colorization
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // Line Numbers
  "editor.lineNumbers": "on",
  "editor.renderLineHighlight": "all",

  // Folding
  "editor.foldingStrategy": "indentation",

  // Suggest Settings
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",

  // Multi Cursor
  "editor.multiCursorModifier": "alt",

  // Scroll Beyond Last Line
  "editor.scrollBeyondLastLine": false,

  // Word Wrap
  "editor.wordWrapColumn": 80,

  // Whitespace
  "editor.renderWhitespace": "boundary",

  // Cursor Blinking
  "editor.cursorBlinking": "blink",

  // Cursor Style
  "editor.cursorStyle": "line",

  // Cursor Width
  "editor.cursorWidth": 2,

  // Smooth Scrolling
  "editor.smoothScrolling": true,

  // Cursor Surrounding Lines
  "editor.cursorSurroundingLines": 3,

  // Cursor Surrounding Lines Style
  "editor.cursorSurroundingLinesStyle": "all",

  // Large File Optimizations
  "files.largeFileOptimizations": true,

  // Max Memory
  "files.maxMemoryForLargeFilesMB": 4096,

  // Auto Save Delay
  "files.autoSaveDelay": 1000,

  // Hot Exit
  "files.hotExit": "onExitAndWindowClose",

  // Restore Windows
  "window.restoreWindows": "all",

  // Zoom Level
  "window.zoomLevel": 0,

  // Workbench Color Theme
  "workbench.colorTheme": "Default Dark+",

  // Workbench Icon Theme
  "workbench.iconTheme": "vs-seti",

  // Workbench Product Icon Theme
  "workbench.productIconTheme": "Default",

  // Workbench Tree Indent
  "workbench.tree.indent": 8,

  // Workbench Tree Render Indent Guides
  "workbench.tree.renderIndentGuides": "always",

  // Workbench Compact Folders
  "workbench.explorer.compactFolders": false,

  // Workbench Open Editors
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,

  // Workbench Side Bar
  "workbench.sideBar.location": "left",

  // Workbench Panel
  "workbench.panel.defaultLocation": "bottom",

  // Workbench Status Bar
  "workbench.statusBar.visible": true,

  // Workbench Menu Bar
  "window.menuBarVisibility": "visible",

  // Workbench Title Bar
  "window.titleBarStyle": "custom",

  // Workbench Native Tabs
  "workbench.editor.showTabs": "multiple",

  // Workbench Tab Close Button
  "workbench.editor.tabCloseButton": "right",

  // Workbench Tab Limit
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,

  // Workbench Tab Limit Per Editor Group
  "workbench.editor.limit.perEditorGroup": true,

  // Workbench Tab Limit Per Editor Group Value
  "workbench.editor.limit.perEditorGroup.value": 8,

  // Workbench Tab Limit Per Editor Group Exclude
  "workbench.editor.limit.perEditorGroup.exclude": [],

  // Workbench Tab Limit Per Editor Group Exclude Pattern
  "workbench.editor.limit.perEditorGroup.excludePattern": [],

  // Workbench Tab Limit Per Editor Group Exclude Pattern Match
  "workbench.editor.limit.perEditorGroup.excludePatternMatch": "filesToExclude",

  // Workbench Tab Limit Per Editor Group Exclude Pattern Match Files To Exclude
  "workbench.editor.limit.perEditorGroup.excludePatternMatch.filesToExclude": [],

  // Workbench Tab Limit Per Editor Group Exclude Pattern Match Files To Exclude Pattern
  "workbench.editor.limit.perEditorGroup.excludePatternMatch.filesToExcludePattern": [],

  // Workbench Tab Limit Per Editor Group Exclude Pattern Match Files To Exclude Pattern Match
  "workbench.editor.limit.perEditorGroup.excludePatternMatch.filesToExcludePatternMatch": "filesToExclude",

  // Workbench Tab Limit Per Editor Group Exclude Pattern Match Files To Exclude Pattern Match Files To Exclude
  "workbench.editor.limit.perEditorGroup.excludePatternMatch.filesToExcludePatternMatch.filesToExclude": [],

  // Workbench Tab Limit Per Editor Group Exclude Pattern Match Files To Exclude Pattern Match Files To Exclude Pattern
  "workbench.editor.limit.perEditorGroup.excludePatternMatch.filesToExcludePatternMatch.filesToExcludePattern": [],

  // Workbench Tab Limit Per Editor Group Exclude Pattern Match Files To Exclude Pattern Match Files To Exclude Pattern Match
  "workbench.editor.limit.perEditorGroup.excludePatternMatch.filesToExcludePatternMatch.filesToExcludePatternMatch": "filesToExclude",
  "workbench.editor.tabActionLocation": "right",
  "editor.guides.indentation": true
}
