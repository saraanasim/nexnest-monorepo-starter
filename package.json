{
  "name": "faith-online",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.14.2+sha512.6e2baf77d06b9362294152c851c4f278ede37ab1eba3a55fda317a4a17b209f4dbb973fb250a77abc463a341fcb1f17f17cfa24091c4eb319cda0d9b84278387",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "start": "turbo run start",
    "start:prod": "turbo run start:prod",
    "type-check": "turbo run type-check",
    "format": "turbo run format",
    "docker:dev": "docker-compose up",
    "docker:dev:build": "docker-compose up --build",
    "docker:dev:down": "docker-compose down",
    "docker:staging": "docker-compose -f docker-compose.staging.yml up --build",
    "docker:staging:down": "docker-compose -f docker-compose.staging.yml down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:build:dev": "docker-compose build",
    "docker:build:staging": "docker-compose -f docker-compose.staging.yml build",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml build",
    "docker:build:all": "pnpm docker:build:dev && pnpm docker:build:staging && pnpm docker:build:prod",
    "prepare": "husky"
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1"
  },
  "lint-staged": {
    "apps/frontend/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config apps/frontend/eslint.config.mjs",
      "prettier --write --config apps/frontend/.prettierrc"
    ],
    "apps/backend/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config apps/backend/eslint.config.mjs",
      "prettier --write --config apps/backend/.prettierrc"
    ],
    "packages/shared/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config packages/shared/.eslintrc.js",
      "prettier --write --config packages/shared/.prettierrc"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
