FROM node:20-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Copy environment files (will be overridden by docker-compose env_file)
COPY .env* ./

# Expose port
EXPOSE 3001

# Start development server
CMD ["pnpm", "start:dev"]
